    <div class="col-md-4">
       <img src="/Image/login-image.jpg" class="img-fluid rounded-start" alt="...">
      </div>
      <div class="col-md-8">
        <h2>
          <a href="/home-routes/{{id}}">{{title}}</a>
        </h2>
        <h5>Startup</h5><p>{{startup}}</p>
        <p>{{description}}</p>
        <div>
          Project starts on
          {{format_date start_date}}
          until
          {{format_date end_date}}
        </div>
      </div>
      <div class="card-body">
        {{body}}
      
