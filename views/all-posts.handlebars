{{!-- Link to stylesheet --}}
<link rel="stylesheet" href="/stylesheet/style.css" type="css"/>

{{!-- Cards for projects, #each loops over and renders all projects in database to page --}}
<div class="card mb-3 dash-proj"  style="max-width: 940px;">
  {{#each projects}}
    <article class="card">
      <div class="card-header bg-light flex-row justify-space-between">
  <div class="row g-0">
    <div class="col-md-4">
       <img src="/Image/login-image.jpg" class="img-fluid" alt="...">
      </div>
      <div class="col-md-8">
        <h2 class="proj-title">
          {{id}}: {{title}}
        </h2>

        {{!-- Renders description, team and dates to project cards --}}
        <h5>Startup</h5><h4 class="startup-name">{{startup}}</h4>
        <p>{{description}}</p>
        <p>Team Name: {{Team.teamName}}</p>
        <div>
          Project starts on
          {{format_date start_date}}
          until
          {{format_date end_date}}
        </div>
      </div>
      <div class="card-body">
        {{body}}
        <button type="button" class="btn btn-primary project-button" value="{{id}}">Join
          Project</button>
      </div>
    </article>
  {{/each}}
</div>

